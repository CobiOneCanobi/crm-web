<h1>Edit a Contact</h1>

<form action="/contacts/<%= @contact.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <p><label for="first-name">First Name</label>
  <input type="text" name="first_name" value="<%= @contact.first_name %>" id="first_name"></p>
  <p><label for="last-name">Last Name</label>
  <input type="text" name="last_name" value="<%= @contact.last_name %>" id="last_name"></p>
  <p><label for="email">Email</label>
  <input type="text" name="email" value="<%= @contact.email %>" id="email"></p>
  <p><label for="note">Note</label>
  <input type="text" name="note" value="<%= @contact.note %>" id="note"></p>
  <p><label></label>
  <input type="submit" name="Submit"></p>
</form>